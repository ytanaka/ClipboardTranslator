<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.ytanaka.cliptrans" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="io.github.ytanaka.cliptrans.MyApplication"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="io.github.ytanaka.cliptrans.activity.MainActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name_short" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.ytanaka.cliptrans.activity.SettingActivity"
            android:label="@string/title_setting" >
        </activity>
        <activity
            android:name="io.github.ytanaka.cliptrans.activity.AboutActivity"
            android:label="@string/title_about" >
        </activity>
        <activity
            android:name="io.github.ytanaka.cliptrans.activity.DicActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
        </activity>

        <service android:name="io.github.ytanaka.cliptrans.service.ClipboardListenerService" />
    </application>

</manifest>
